    <!--Toolbar-->
    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_heigth</item>
        <item name="android:background">@color/purple</item>
        <item name="android:minHeight">@dimen/toolbar_heigth</item>
        <item name="android:actionBarSize">@dimen/toolbar_heigth</item>
    </style>

    <!--Uni font theme-->
    <style name="TextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.Small">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TextStyle.Big">
        <item name="android:textSize">@dimen/font_big</item>
    </style>

    <style name="TextStyle.Small.Caps">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextStyle.Big.Caps">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextStyle.Big.Caps.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!--button theme-->
    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <!--sidebar-->
    <style name="SidebarItem" parent="TextStyle.Big.Caps">
        <item name="android:paddingLeft">@dimen/spacing_normal</item>
        <item name="android:paddingRight">@dimen/spacing_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/leftsidemenu_line_heigth</item>
        <item name="android:onClick">onMenuLeftItemSelected</item>
    </style>

    <style name="SidebarItem.Secondary">
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

</resources>
